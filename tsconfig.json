{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@api/*": ["src/apis/hts/*"],
      "@graph/*": ["src/graph/hts/*"],
      "@google/*": ["src/apis/google/protobuf/*"],
      "@entities/*": ["src/entities/*"],
      "@adapters/*": ["src/adapters/*"]
    }
  }
}
